{
	"variables": {
		"build_timestamp": "{{timestamp}}"
	},
	"builders": [{
		"type": "virtualbox-iso",
		"boot_command": [
			"<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.cfg<enter><wait>"
		],
		"boot_wait": "10s",
		"disk_size": 40520,
		"guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
		"guest_os_type": "RedHat_64",
		"headless": "true",
		"http_directory": "http",
		"iso_checksum": "1795184136b8bdddabe50453cc2cc2d46f0f7c5e",
		"iso_checksum_type": "sha1",
		"iso_url": "http://archive.kernel.org/centos-vault/7.1.1503/isos/x86_64/CentOS-7-x86_64-DVD-1503-01.iso",
		"output_directory": "output-virtualbox-iso-{{user `build_timestamp`}}",
		"shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
		"ssh_username": "vagrant",
		"ssh_password": "vagrant",
		"ssh_port": 22,
		"ssh_wait_timeout": "10000s",
		"virtualbox_version_file": ".vbox_version",
		"vm_name": "packer-centos-eclipse-cpp-{{user `build_timestamp`}}",
		"vboxmanage": [
			["modifyvm", "{{.Name}}", "--memory", "512"],
			["modifyvm", "{{.Name}}", "--hwvirtex", "on"],
			["modifyvm", "{{.Name}}", "--cpus", "1"]
		]
	}, {
		"type": "vmware-iso",
		"boot_command": [
			"<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/kickstart.cfg<enter><wait>"
		],
		"boot_wait": "10s",
		"disk_size": 40520,
		"guest_os_type": "centos-64",
		"headless": "true",
		"http_directory": "http",
		"iso_checksum": "1795184136b8bdddabe50453cc2cc2d46f0f7c5e",
		"iso_checksum_type": "sha1",
		"iso_url": "http://archive.kernel.org/centos-vault/7.1.1503/isos/x86_64/CentOS-7-x86_64-DVD-1503-01.iso",
		"output_directory": "output-vmware-iso-{{user `build_timestamp`}}",
		"shutdown_command": "echo '/sbin/halt -h -p' > /tmp/shutdown.sh; echo 'vagrant'|sudo -S sh '/tmp/shutdown.sh'",
		"ssh_username": "vagrant",
		"ssh_password": "vagrant",
		"ssh_port": 22,
		"ssh_wait_timeout": "10000s",
		"tools_upload_flavor": "linux",
		"vm_name": "packer-centos-eclipse-cpp-{{user `build_timestamp`}}",
		"vmdk_name": "packer-centos-eclipse-cpp-{{user `build_timestamp`}}",
		"vmx_data": {
			"memsize": "512",
			"numvcpus": "1",
			"cpuid.coresPerSocket": "1"
		}
	}],
	"provisioners": [{
		"type": "file",
		"source": "./files",
		"destination": "/tmp/files"
	}, {
		"type": "shell",
		"execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
		"override": {
			"virtualbox-iso": {
				"scripts": [
					"scripts/base.sh",
					"scripts/vagrant.sh",
					"scripts/virtualbox.sh",
					"scripts/yum-installs.sh",
					"scripts/cpp.sh",
					"scripts/qmake.sh",
					"scripts/java.sh",
					"scripts/eclipse.sh",
					"scripts/cleanup.sh"
				]
			},
			"vmware-iso": {
				"scripts": [
					"scripts/base.sh",
					"scripts/vagrant.sh",
					"scripts/vmware.sh",
					"scripts/yum-installs.sh",
					"scripts/cpp.sh",
					"scripts/qmake.sh",
					"scripts/java.sh",
					"scripts/eclipse.sh",
					"scripts/cleanup.sh"
				]
			}
		}
	}],
	"post-processors": [{
		"type": "vagrant",
		"keep_input_artifact": true,
		"override": {
			"virtualbox": {
				"output": "packer-centos-eclipse-cpp-virtualbox-{{user `build_timestamp`}}.box"
			},
			"vmware": {
				"output": "packer-centos-eclipse-cpp-vmware-{{user `build_timestamp`}}.box"
			}
		}
	}]
}
